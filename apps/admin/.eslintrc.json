{
  "extends": [
    "../../.eslintrc.json",
    "plugin:vue/vue3-essential",
    "@vue/typescript/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": false
  },
  "ignorePatterns": ["!**/*", "configure-webpack.js", "typings/"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.spec.{j,t}s?(x)"],
      "env": {
        "jest": true
      },
      "rules": {
        "singleQuote": 1
      }
    }
  ]
}
